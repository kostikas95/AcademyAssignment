<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <!-- Fragment Container -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bttn_pop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Popular Button -->
    <Button
        android:id="@+id/bttn_pop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Popular"
        android:textColor="@color/bttswhite"
        android:backgroundTint="@color/bttsred"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bttn_search"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <!-- Search Button -->
    <Button
        android:id="@+id/bttn_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textColor="@color/bttswhite"
        android:backgroundTint="@color/bttsred"
        app:layout_constraintStart_toEndOf="@+id/bttn_pop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bttn_favs"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <!-- Favourites Button -->
    <Button
        android:id="@+id/bttn_favs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Favourites"
        android:textColor="@color/bttswhite"
        android:backgroundTint="@color/bttsred"
        app:layout_constraintStart_toEndOf="@+id/bttn_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>